{
    "name": "alientronics/fleetany-web",
    "description": "An open source fleet management web system",
    "keywords": ["alientronics", "fleetany", "web"],
    "license": "AGPL-3.0",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
        "laravelcollective/html": "5.2.*",
        "prettus/l5-repository": "dev-master",
        "prettus/laravel-validation": "1.1.*",
        "caouecs/laravel4-lang": "~2.0",
        "kodeine/laravel-acl": "dev-master",
        "laravel/socialite": "^2.0",
		"doctrine/dbal": "v2.4.2"
    },
    "require-dev": {
        "symfony/dom-crawler": "~3.0",
        "symfony/css-selector": "~3.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "squizlabs/php_codesniffer": "^2.3",
        "phploc/phploc": "*",
        "sebastian/phpcpd": "*",
        "phpmd/phpmd": "*",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/AcceptanceTestCase.php",
            "tests/UnitTestCase.php"
        ],
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
